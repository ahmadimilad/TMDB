<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TMDB" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/navigationBarColor</item>
    </style>

    <style name="Theme.Splash" parent="Theme.TMDB">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/bitmap_splash</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/navigationBarColor</item>
    </style>

    <style name="AppTheme.ExpandedTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">#3A3A3A</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.CollapsedTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">#E8E8E8</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>